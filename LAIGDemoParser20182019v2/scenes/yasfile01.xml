		</component>

		<component id="comp4"> 
			<transformation> 
				<transformationref id="transf4" />
			</transformation> 

			<materials>
				<material id="inherit" />
			</materials>
 
			<texture id="text1" length_s="1.0" length_t="1.0" />
			
			<children> 
				<primitiveref id="prim0" /> 
			</children> 
		</component>

		<component id="comp5"> 
			<transformation> 
				<transformationref id="transf5" />
			</transformation> 

			<materials>
				<material id="inherit" />
			</materials>

			<texture id="text1" length_s="1.0" length_t="1.0" />
 
			<children> 
				<primitiveref id="prim0" /> 
			</children> 
		</component>

		<component id="cube"> 
			<transformation>
			</transformation>

			<materials> 
				<material id="mat0" />
			</materials> 
 
			<texture id="text1" length_s="1.0" length_t="1.0" />
 
			<children> 
				<componentref id="comp0" />
				<componentref id="comp1" />
				<componentref id="comp2" />
				<componentref id="comp3" />
				<componentref id="comp4" />
				<componentref id="comp5" />
			</children> 
		</component>
	</components> 
 
</yas>